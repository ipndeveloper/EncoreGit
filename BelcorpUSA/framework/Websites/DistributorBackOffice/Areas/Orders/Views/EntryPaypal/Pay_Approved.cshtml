<div style="background-color:White;">
    <h2>@Html.Term("PagamentoAprovada", "Pagamento")</h2>
    <br /><br /><br />
    <div style="margin-left:30px">
        <p style="font-size:12px;">
            @Html.Term("nropedido", "Pedido"):<b>@ViewData["numPedido"]</b><br />
            @Html.Term("condicaopago", "Condicao"):<b>@ViewData["numcuota"]</b><br />
            @Html.Term("valorpedido", "Valor"):<b>@ViewData["valorpedido"]</b><br />
        </p>
    </div>
    <div>
    
        <div style="text-align:center;"> 
            <p style="font-size: 14px;">@Html.Term("statustransacao", "Transaçäo Aprovada")</P>
            <br />
            <a href="javascript:void(0);" id="btnFechar" style="display: inline-block;"
            class="Button BigBlue  ">@Html.Term("Fechar", "Fechar")</a><br /><br />
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function ()
    {
       
        $('#btnFechar').click(function ()
        {
            
            $('#PayPalPrePayment').jqmHide();
            $('#orderWait').jqmShow();
            window.location = '@Url.Content("~/Orders/Details/Index/")'+@ViewData["numPedido"];
            $('#orderWait').jqmShow();
        });

    });

</script>

